<style>
  /* Vinyl Record Effect */
  .album-card {
    transition: transform 0.3s ease;
  }

  .album-card:hover {
    transform: scale(1.02);
  }

  .vinyl-container {
    position: relative;
    aspect-ratio: 1;
    margin-bottom: 0.5rem;
    overflow: visible;
  }

  @media (min-width: 640px) {
    .vinyl-container {
      margin-bottom: 1rem;
    }
  }

  .vinyl-disc {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 90%;
    height: 90%;
    background: radial-gradient(circle at center,
      #1a1a1a 0%,
      #1a1a1a 15%,
      #d4af37 15.5%,
      #d4af37 16%,
      #0a0a0a 16.5%,
      #1a1a1a 20%,
      #0a0a0a 25%,
      #1a1a1a 30%,
      #0a0a0a 35%,
      #1a1a1a 40%,
      #0a0a0a 45%,
      #1a1a1a 50%,
      #0a0a0a 55%,
      #1a1a1a 60%,
      #0a0a0a 65%,
      #1a1a1a 70%,
      #0a0a0a 100%
    );
    border-radius: 50%;
    transform: translate(-50%, -50%) translateX(0);
    transition: transform 0.4s ease;
    z-index: 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  /* Vinyl shine effect */
  .vinyl-disc::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 30%,
      transparent 50%,
      rgba(255, 255, 255, 0.05) 70%,
      transparent 100%
    );
    border-radius: 50%;
  }

  .album-cover {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
    z-index: 1;
    transition: transform 0.4s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  /* Hover: slide cover to reveal spinning vinyl */
  .album-card:hover .album-cover {
    transform: translateX(-15%);
  }

  .album-card:hover .vinyl-disc {
    transform: translate(-50%, -50%) translateX(20%);
    animation: vinylSpin 2s linear infinite;
  }

  @keyframes vinylSpin {
    from {
      transform: translate(-50%, -50%) translateX(20%) rotate(0deg);
    }
    to {
      transform: translate(-50%, -50%) translateX(20%) rotate(360deg);
    }
  }

  /* Mobile: simpler effect */
  @media (max-width: 640px) {
    .album-card:hover .album-cover {
      transform: translateX(-10%);
    }
    .album-card:hover .vinyl-disc {
      transform: translate(-50%, -50%) translateX(15%);
    }
    @keyframes vinylSpin {
      from {
        transform: translate(-50%, -50%) translateX(15%) rotate(0deg);
      }
      to {
        transform: translate(-50%, -50%) translateX(15%) rotate(360deg);
      }
    }
  }
</style>